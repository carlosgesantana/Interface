@model Produto

<div class="panel panel-default">
    <div class="panel-body">
        <div class="panel-heading">
            <h2>Sucesso!<br /><small>Veja os detalhes do produto cadastrado..</small></h2>
        </div>
        <div class="panel-body">
            <h4>Descrição: @Model.DescricaoCurta</h4>
            <h4>Fornecedor: @Model.Fornecedor.Id</h4>
            <h4>Quantidade: @Model.Quantidade</h4>
            <h4>Custo: @Model.Custo</h4>
            <h4>Preco: @Model.Preco</h4>
        </div>
        <div class="form-group">
            <a asp-action="Default">Voltar</a>
        </div>
    </div>
</div>